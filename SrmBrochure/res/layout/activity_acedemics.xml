<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Acedemics"
    android:orientation="vertical"
    android:background="@raw/main" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/acd" 
        android:layout_marginTop="200dp"
        android:textStyle="bold"/>
<Button
    android:layout_width="fill_parent"
    android:layout_height="90dp"
    android:layout_marginTop="15dp"
    android:background="@drawable/anim"
    android:id="@+id/Acd1"/>
<Button
    android:layout_width="fill_parent"
    android:layout_height="90dp"
    android:layout_marginTop="6dp"
    android:background="@drawable/anim2"
    android:id="@+id/Acd2"/>
<Button
    android:layout_width="fill_parent"
    android:layout_height="90dp"
    android:layout_marginTop="6dp"
    android:background="@drawable/anim3"
    android:id="@+id/Acd3"
    />
<Button
    android:layout_width="fill_parent"
    android:layout_height="90dp"
    android:layout_marginTop="6dp"
    android:background="@drawable/anim4"
    android:id="@+id/Acd4"
    />
<TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lulu" 
        android:layout_marginTop="2dp"
        android:textStyle="bold"/>
<Button
    android:layout_width="70dp"
    android:layout_height="40dp"
    android:layout_marginTop="20dp"
    android:layout_marginBottom="1dp"
    android:background="@drawable/anim11"
    android:id="@+id/Home1"
    />


</LinearLayout>
</ScrollView>